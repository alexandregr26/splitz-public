{
  "name": "Splitz",
  "description": "Manage tabs efficiently on Google Chromeâ„¢.",
  "version": "1.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": ["tabs","storage"],
  "browser_action": {
    "default_icon": {
      "16": "icons/S16.png",
      "48": "icons/S48.png",
      "128": "icons/S128.png"
    },
    "default_title": "SplitzWindow",
    "default_popup": "popup.html"
  },
  "commands": {
    "flip-tabs-forward": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "Command+Shift+Left"
      },
      "description": "Flip tabs forward"
    },
    "flip-tabs-backwards": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "Command+Shift+Right"
      },
      "description": "Flip tabs backwards"
    },
    "close-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up",
        "mac": "Command+Shift+Up"
      },
      "description": "Close Current Tab"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "Opens popup.html"
    }
  },
  "icons": {
    "16": "icons/S16.png",
    "48": "icons/S48.png",
    "128": "icons/S128.png"
  }
}